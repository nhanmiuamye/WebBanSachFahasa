@{ 
    ViewBag.Title = "Loại Quyền";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    LOAIQUYENCUANHANVIEN quyennv = new LOAIQUYENCUANHANVIEN(); 
}
@using WebBanSachFahasa.Models;
@if (quyennv.getDataQuyenNV(Session["maad"].ToString(), "them_loaiquyen") == 1 || Session["maad"].ToString().Equals("admin"))
{
    <button type="button" class="btn btn-outline-danger a" data-toggle="modal" data-target="#exampleModal">
        THÊM MỚI
    </button>
}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 800px; margin-left: -150px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                                            <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                            <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                                            <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                                        </svg>
                                    </span>
                                </div>
                                <input type="text" class="form-control" placeholder="Mã quyền" aria-label="" aria-describedby="basic-addon1" required name="ma" id="ma">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                        </svg>
                                    </span>
                                </div>
                                <input type="text" class="form-control" placeholder="Tên quyền" aria-label="Tên" aria-describedby="basic-addon1" required name="ten" id="ten">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <p id="erro" style="color: red"></p>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" name="them" value="them" id="saveLoaiQuyen">Save changes</button>
            </div>
        </div>
    </div>
</div>
<table class="table" style="margin-top: 15px">
    <thead>
        <tr>
            <td>
                STT
            </td>
            <td>
                Mã
            </td>
            <td>
                Tên
            </td>
        </tr>
    </thead>
    <tbody>
        @{ 
            LOAIQUYEN quyen = new LOAIQUYEN();
            var menu = quyen.getData();
            var i = 1;
            foreach (var item in menu)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.Ma</td>
                <td>@item.Ten</td>
                <td>
                    @if (quyennv.getDataQuyenNV(Session["maad"].ToString(), "sua_loaiquyen") == 1 || Session["maad"].ToString().Equals("admin"))
                    {
                        <button type="button" class="btn btn-outline-danger a" data-toggle="modal" data-target="#exampleModalSua" onclick="ChiTietLoaiQuyen('@item.ID')">
                            Sửa
                        </button>
                    }
                    <div class="modal fade" id="exampleModalSua" tabindex="-1" aria-labelledby="exampleModalLabelSua" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content" style="width: 800px; margin-left: -150px;">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabelSua">Sửa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="text-center">
                                        <div class="row">
                                            <div class="col-xl-6">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text" id="basic-addon1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                                                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                                                <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                                                                <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                                                            </svg>
                                                        </span>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Mã quyền" aria-label="" aria-describedby="basic-addon1" required name="ma" id="masua" disabled="disabled">
                                                </div>
                                            </div>
                                            <div class="col-xl-6">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text" id="basic-addon1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                                                                <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                                                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                                            </svg>
                                                        </span>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Tên quyền" aria-label="Tên" aria-describedby="basic-addon1" required name="ten" id="tensua">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <p id="erro" style="color: red"></p>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary" name="them" value="them" id="saveLoaiQuyenSua">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr> i++;
            } 
        }
    </tbody>
</table>
