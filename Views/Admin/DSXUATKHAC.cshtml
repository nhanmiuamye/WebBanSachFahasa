@{ 
    ViewBag.Title = "Danh Sách Phiếu Xuất Khác";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml"; 
 }
@using WebBanSachFahasa.Models;
<style>
    .select2 {
        width: 75% !important;
    }
</style>
@{ 
    LOAIQUYENCUANHANVIEN quyen = new LOAIQUYENCUANHANVIEN(); 
 }
<table id="example" class="table" style="margin-top: 15px">
    <thead>
        <tr>
            <td>
                STT
            </td>
            <td>
                Mã phiếu
            </td>
            <td>
                Ngày xuất
            </td>
            <td>
                Nơi xuất
            </td>
            <td>
                Nơi nhận
            </td>
            <td>
                Ghi chú
            </td>
            <td>
                Người tạo
            </td>
            <td>
                Ngày tạo
            </td>
            <td>
                Trạng thái
            </td>
            <td>Thao tác</td>
        </tr>
    </thead>
    <tbody>
        @{ 
            PHIEUXUAT sp = new PHIEUXUAT();
            var menuSp = sp.getData(1);
            if (!Session["maad"].ToString().Equals("admin"))
            {
                menuSp = sp.getData(1, Session["maad"].ToString());
            }
            var i = 1;
            foreach (var item in menuSp)
            {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @item.MAPHIEU
                </td>
                <td>
                    @item.NGAYXUAT
                </td>
                <td>
                    @{      
                        CHINHANH cn = new CHINHANH();
                        var itemCn = cn.getData3(item.MACNXUAT);
                        var tencn = "";
                        foreach (var item2 in itemCn)
                        {
                            tencn = item2.Ten;
                        } 
                    }
                        @tencn
                </td>
                <td>
                    @item.NOINHAN
                </td>
                <td>
                    @item.GHICHU
                </td>
                <td>
                    @item.NGUOITAO
                </td>
                <td>
                    @item.NGAYTAO
                </td>
                <td>
                    @{ 
                        var tt = "";
                        if (int.Parse(item.TRANGTHAI) == 0)
                        {
                            tt = "Phiếu mới tạo";
                        }
                        else if (int.Parse(item.TRANGTHAI) == 6)
                        {
                            tt = "Đã xuất kho";
                        }
                        else if (int.Parse(item.TRANGTHAI) == 7)
                        {
                            tt = "Đã hủy";
                        } 
                    }
                    <strong>@tt</strong>
                    </td>
                    <td>
                        @{ 
                            var link = "/Admin/CNPHIEUXUAT/" + @item.MAPHIEU;
                            var link2 = "/Admin/CTPHIEUXUAT/" + @item.MAPHIEU; 
                         }
                        @{ 
                            if (int.Parse(item.TRANGTHAI) == 0)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Thao tác
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        @if (quyen.getDataQuyenNV(Session["maad"].ToString(), "duyet_phieu_xuat") == 1 || Session["maad"].ToString().Equals("admin"))
                                        {
                                            using (Html.BeginForm("DSXUATKHAC", "Admin", FormMethod.Post, new { @class = "" }))
                                            {
                                                <a class="dropdown-item">
                                                    <button type="submit" class="btn btn-outline-danger" name="Huy" value="@item.MAPHIEU">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                                        </svg>
                                                    </button>
                                                </a>
                                                <a class="dropdown-item" href="#">
                                                    <button type="submit" class="btn btn-outline-info" name="Duyet" value="@item.MAPHIEU">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                                                        </svg>
                                                    </button>
                                                </a>}
                                            }
                                            @if (quyen.getDataQuyenNV(Session["maad"].ToString(), "cn_phieu_xuat") == 1 || Session["maad"].ToString().Equals("admin"))
                                            {
                                                <a href="@link" class="dropdown-item">Cập nhật</a>
                                            }
                                            <a href="@link2" class="dropdown-item">Chi tiết</a>
                                    </div>
                                </div> 
                             }
                            else
                            {
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Thao tác
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a href="@link2" class="dropdown-item">Chi tiết</a>
                                    </div>
                                </div> 
                            } 
                                }
                    </td>
            </tr> 
                i++;
            } 
        }
    </tbody>
</table>

